<!--
BREAKPOINT CONFIGURATIONS:

This is the configuration file for all your viewports. When you want to add a new responsive breakpoint, you start here.
Specific to this example, our custom columnsPerRow breakpoint property '<var name="columnsPerRow">3</var>' is defined
here along with the other built-in properties for the breakpoints.

-->

<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <vars module="Magento_PageBuilder">
        <var name="breakpoints">
            <var name="desktop">
                <var name="options">
                    <var name="columns">
                        <var name="default">
                            <var name="columnsPerRow">10</var>
                        </var>
                    </var>
                </var>
            </var>
            <var name="tablet">
                <var name="label">Tablet</var>
                <var name="stage">true</var>
                <var name="default">false</var>
                <var name="class">mobile-switcher</var>
                <var name="icon">PageBuilder_Breakpoints::css/images/switcher/switcher-tablet.svg</var>
                <var name="media">only screen and (max-width: 1024px)</var>
                <var name="conditions">
                    <var name="max-width">1024px</var>
                </var>
                <var name="options">
                    <var name="columns">
                        <var name="default">
                            <var name="columnsPerRow">3</var>
                        </var>
                    </var>
                </var>
            </var>
            <var name="mobile">
                <var name="label">Mobile</var>
                <var name="stage">true</var>
                <var name="class">mobile-switcher</var>
                <var name="icon">PageBuilder_Breakpoints::css/images/switcher/switcher-mobile.svg</var>
                <var name="media">only screen and (max-width: 768px)</var>
                <var name="conditions">
                    <var name="max-width">768px</var>
                </var>
                <var name="options">
                    <var name="columns">
                        <var name="default">
                            <var name="columnsPerRow">2</var>
                        </var>
                    </var>
                </var>
            </var>
            <var name="mobile-small">
                <var name="label">Mobile Small</var>
                <var name="stage">true</var>
                <var name="class">mobile-switcher</var>
                <var name="icon">PageBuilder_Breakpoints::css/images/switcher/switcher-mobile-small.svg</var>
                <var name="media">only screen and (max-width: 640px)</var>
                <var name="conditions">
                    <var name="max-width">640px</var>
                </var>
                <var name="options">
                    <var name="columns">
                        <var name="default">
                            <var name="columnsPerRow">1</var>
                        </var>
                    </var>
                </var>
            </var>
        </var>
    </vars>
</view>
