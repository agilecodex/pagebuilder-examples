<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form_with_background_attributes">
    <fieldset name="general">

        <!-- Integrate Color palette from theme -->
        <field name="overlay_color" formElement="colorPicker">
            <formElements>
                <colorPicker>
                    <settings>
                        <colorPickerMode>palette</colorPickerMode>
                    </settings>
                </colorPicker>
            </formElements>
        </field>

        <!-- Integrate Hollow button style from theme -->
        <field name="button_type" formElement="select">
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">pagebuilder-button-hollow</item>
                                <item name="label" xsi:type="string" translate="true">Hollow</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
